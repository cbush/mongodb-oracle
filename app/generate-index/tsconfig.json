{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "incremental": true,
    // "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "build"
  },
  "include": ["**/*.ts", "*.ts", "../types.d.ts"],
  "exclude": ["node_modules"]
}
